<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:paddingVertical="30dp">
       <LinearLayout
           android:id="@+id/container"
           android:layout_width="match_parent"
           android:layout_height="410dp"
           android:layout_marginHorizontal="30dp"
           android:layout_marginTop="15dp"
           android:padding="20dp"
           android:background="@drawable/struk_border"
           android:orientation="vertical"
           >

           <TextView
               android:id="@+id/bayar_id_hint"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/struk_user_id"
               android:textColor="#A7A7A7"/>
           <TextView
               android:id="@+id/bayar_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="#000"
               android:text="-"
               android:layout_marginBottom="20dp"/>

           <TextView
               android:id="@+id/bayar_name_hint"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/struk_nama_pembayar"
               android:textColor="#A7A7A7"/>
           <TextView
               android:id="@+id/bayar_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="#000"
               android:text="-"
               android:layout_marginBottom="20dp"/>

           <TextView
               android:id="@+id/bayar_date_hint"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/struk_tgl_pembayaran"
               android:textColor="#A7A7A7"/>
           <TextView
               android:id="@+id/bayar_date"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="#000"
               android:text="-"
               android:layout_marginBottom="20dp"/>

           <TextView
               android:id="@+id/bayar_jenis_hint"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/struk_jenis_zakat"
               android:textColor="#A7A7A7"/>
           <TextView
               android:id="@+id/bayar_jenis"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="#000"
               android:text="-"
               android:layout_marginBottom="20dp"/>

           <TextView
               android:id="@+id/bayar_jumlah_hint"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/struk_jumlah"
               android:textColor="#A7A7A7"/>
           <TextView
               android:id="@+id/bayar_jumlah"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="#000"
               android:text="-"
               android:layout_marginBottom="20dp"/>


       </LinearLayout>


       <Button
           android:id="@+id/lanjut_btn"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#FFF"
           android:background="#2ECC71"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:text="@string/lanjut_btn"
           android:layout_below="@+id/container"
           android:layout_marginTop="25dp"
           android:onClick="toLoading"
           />
   </LinearLayout>

</ScrollView>